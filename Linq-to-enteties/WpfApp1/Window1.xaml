<Window x:Class="WpfApp1.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid Margin="0,0,3.6,0">
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="29" Margin="326,146,0,0" TextWrapping="Wrap" Text="Enter your login" VerticalAlignment="Top" Width="153"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" Height="29" Margin="326,212,0,0" VerticalAlignment="Top" Width="153"/>
        <Label x:Name="label" Content="Login" HorizontalAlignment="Left" Margin="326,110,0,0" VerticalAlignment="Top" Width="100" Height="30"/>
        <Label x:Name="label1" Content="Password" HorizontalAlignment="Left" Margin="326,181,0,0" VerticalAlignment="Top" Width="100" Height="31"/>
        <Button x:Name="button" Content="Sign in" HorizontalAlignment="Left" Margin="353,246,0,0" VerticalAlignment="Top" Width="90" RenderTransformOrigin="0.495,-0.01" Height="28" Click="button_Click"/>

    </Grid>
</Window>
